{
  "name": "media-index-api",
  "version": "1.0.0",
  "description": "API module for the MA Media Index",
  "main": "MediaIndex.js",
  "scripts": {
    "build": "babel ./src -d ./dist",
    "lint": "eslint ./src",
    "test": "ava --tap --serial"
  },
  "babel": {
    "presets": [
      "latest"
    ],
    "plugins": [
      "transform-runtime",
      "external-helpers"
    ]
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "source": [
      "src/**/*"
    ],
    "require": [
      "babel-register"
    ]
  },
  "keywords": [
    "Media",
    "Index",
    "Market",
    "America",
    "Mobile"
  ],
  "author": "mobile@marketamerica.com",
  "license": "ISC",
  "dependencies": {
    "universal-fetch": "^1.0.0"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.18.0",
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-latest": "^6.16.0",
    "dotenv": "^4.0.0",
    "lint-rules": "github:ma-shop/lint-rules"
  }
}
