{
  "name": "media-index-api",
  "version": "1.0.4",
  "description": "API module for the MA Media Index",
  "main": "dist/media-index.js",
  "scripts": {
    "build": "babel ./src -d ./dist",
    "lint": "eslint ./src",
    "test": "ava --tap --serial"
  },
  "babel": {
     "presets": [
      [
        "env",
        {
          "targets": {
            "android": 4.4,
            "ios": 8,
            "node": 4.3
          }
        }
      ]
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "source": [
      "src/**/*"
    ],
    "require": [
      "babel-register"
    ]
  },
  "keywords": [
    "Media",
    "Index",
    "Market",
    "America",
    "Mobile"
  ],
  "author": "mobile@marketamerica.com",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/ma-shop/media-index-api.git"
  },
  "dependencies": {
    "universal-fetch": "^1.0.0"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.2.1",
    "dotenv": "^4.0.0",
    "lint-rules": "github:ma-shop/lint-rules"
  }
}
